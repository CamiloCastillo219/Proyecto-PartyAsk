<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Aquí pueden ir otros elementos de tu diseño -->

    <!-- Agregamos el BottomNavigationView al final -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/backgroundmenu"
        app:itemIconSize="80dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <TextView
        android:id="@+id/hometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:fontFamily="@font/istok_web_bold"
        android:lineSpacingExtra="-28sp"
        android:text="@string/home"
        android:gravity="center"
        android:textAppearance="@style/Title"
        app:layout_constraintEnd_toStartOf="@+id/topbackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/topbackground"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="15dp" />

    <View
        android:id="@+id/topbackground"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:background="#F0EEEE"
        android:elevation="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/HostParty"
        android:layout_width="304dp"
        android:layout_height="91dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/colorfullback"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/istok_web"
        android:gravity="center"
        android:lineSpacingExtra="-28sp"
        android:text="@string/host_a_party"
        android:textAppearance="@style/normal"
        android:textColor="@color/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hometext" />

    <TextView
        android:id="@+id/join_to_party"
        android:layout_width="304dp"
        android:layout_height="91dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/colorfullback"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/istok_web"
        android:gravity="center"
        android:lineSpacingExtra="-28sp"
        android:text="@string/jointoparty"
        android:textAppearance="@style/normal"
        android:textColor="@color/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HostParty" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_to_party" />

    <TextView
        android:id="@+id/exploremodes"
        android:layout_width="304dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/istok_web"
        android:gravity="center"
        android:lineSpacingExtra="-28sp"
        android:text="@string/explore_modes"
        android:textAppearance="@style/Subtitle"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangle_2" />

    <TextView
        android:id="@+id/explorecollections"
        android:layout_width="304dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/istok_web"
        android:gravity="center"
        android:lineSpacingExtra="-28sp"
        android:text="@string/explore_collections"
        android:textAppearance="@style/Subtitle"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exploremodes" />

    <TextView
        android:id="@+id/createcollection"
        android:layout_width="304dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/istok_web"
        android:gravity="center"
        android:lineSpacingExtra="-28sp"
        android:text="@string/create_a_collection"
        android:textAppearance="@style/Subtitle"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explorecollections" />


</androidx.constraintlayout.widget.ConstraintLayout>

