<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo de pantalla -->
    <View
        android:id="@+id/background_ask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fullbackground_quest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rectángulo blanco para el contenido -->
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="308dp"
        android:layout_height="708dp"
        android:background="@drawable/emplyspace_canvas"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título de categoría -->

    <!-- Barra de progreso -->
    <TextView
        android:id="@+id/category_ask"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_marginTop="168dp"
        android:elevation="2dp"
        android:fontFamily="@font/istok_web_bold"
        android:gravity="top|center"
        android:text="@string/category"
        android:textAppearance="@style/Innertitle"
        app:layout_constraintEnd_toEndOf="@id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@id/rectangle_1"
        app:layout_constraintTop_toTopOf="@id/rectangle_1" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_ask" />

</androidx.constraintlayout.widget.ConstraintLayout>
